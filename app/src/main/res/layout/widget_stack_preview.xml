                    android:id="@+id/stack_forward">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_left_24px"
                        android:rotationY="-180"
                        android:tint="?attr/colorOnPrimary"
                        />

                </FrameLayout>

            </LinearLayout>

